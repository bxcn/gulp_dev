{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "commonjs": true,
    "require":true
  },
  "globals": {

  },
  "parserOptions": {
  },

  "ecmaFeatures": {
   
  } ,
  // rules参数列表：http://eslint.org/docs/rules/
  "rules": {
    "max-lines":["error",1000],  
    "camelcase": 2,
    "curly": 2, // 大括号
    "brace-style": [2, "1tbs"],
    "quotes": [2, "single"],
    "no-undef": 2,
    "no-unexpected-multiline": 2,
    "no-unused-vars": 2
  }
}
